doctype html
html(lang='en')
  head
    title Simple Credits Tracker App
    link(href='https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;900&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='/fonts/font-awesome-4.7.0/css/font-awesome.min.css')

  body
    div.home-header
      div.header-title
        h3 Welcome to the simple credits tracker app

      div.credits-input
        form(action="/credits" method="post" class="input-form")
          label(for="courseName") Course Name:
          input(type="text" id="courseName" placeholder="Course Name" required autocomplete="off" name="courseName")

          label(for="courseCode") Course Code:
          input(type="text" id="courseCode" placeholder="Course Code" required autocomplete="off" name="courseCode")

          label(for="numCredits") Number of Credits:
          input(type="number" id="numCredits" placeholder="Number of Credits" required autocomplete="off" name="numCredits")

          button(type="submit") Submit

      div.header-paragraph
        p Just enter the classes you have left, along with their codes and number of credits. The app will tell you how many classes you have left and how many credits are left.

    div.main-content

      div.credits-totals
        include credits/credit_totals.pug

      div.credits-list
        include credits/credit_display.pug